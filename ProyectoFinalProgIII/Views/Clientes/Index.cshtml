@model IEnumerable<ProyectoFinalProgIII.Data.Clientes>
@using Microsoft.AspNetCore.Identity
@using ProyectoFinalProgIII.Data;
@inject SignInManager<Usuarios> SignInManager
@inject UserManager<Usuarios> UserManager

@{
    ViewData["Title"] = "Index";
}

@if (SignInManager.IsSignedIn(User))
{

    <h1>Clientes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Registrar Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                RNC o Cedula
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RNC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    <div class="text-center">
                        @item.FechaNacimiento.ToString("dd/MM/yyyy")
                    </div>
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ClienteId">Modificar</a> 
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ClienteId">Detalles</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClienteId">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{

}
