@model IEnumerable<ProyectoFinalProgIII.VIewModels.FacturaListVM>

@{
    ViewData["Title"] = "Details";


}

<h1 class="text-center">Detalles</h1>

@foreach (var item in Model)
{
    <div>
        <h4>Facturacion</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoFactura)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.TipoFactura)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Cantidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Precio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Itbis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Itbis)
            </dd>
            <dt class="col-sm-2">
                Cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.NombreCliente)
            </dd>
            <dt class="col-sm-2">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.NombreUsuario)
            </dd>
            <dt class="col-sm-2">
                Producto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.NombreProducto)
            </dd>
            <dt class="col-sm-2">
                Servicio
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.NombreServicio)
            </dd>
        </dl>

    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@item.FacturacionId">Editar</a> |
        <a asp-action="Index">Volver atras</a>
    </div>
}
