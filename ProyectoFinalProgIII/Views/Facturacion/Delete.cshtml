@model IEnumerable<ProyectoFinalProgIII.VIewModels.FacturaListVM>

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Estas seguro de querer borrar esto?</h3>
@foreach (var item in Model)
{
<div>
    <h4>Facturacion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.TipoFactura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Itbis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.Itbis)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.NombreCliente)
        </dd>
        <dt class = "col-sm-2">
            Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.NombreProducto)
        </dd>
        <dt class = "col-sm-2">
            Servicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.NombreServicio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@item.FacturacionId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver Atras</a>
    </form>
</div>
}
